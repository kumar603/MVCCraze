@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    <label>Username</label>
    @Html.TextBox("username")
    <br />
    <label>Password</label>
    @Html.Password("password")
    <br />
    <input type="submit" value="Login" />
    <p style="color:red;">@ViewBag.Error</p>
}